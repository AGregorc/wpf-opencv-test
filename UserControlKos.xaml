<UserControl x:Class="WpfAppTest.UserControlKos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppTest"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="56,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"><Run Language="sl-si" Text="Nov kos"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="56,42,0,0" Text="GUID" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.219,0.535"/>
        <TextBox HorizontalAlignment="Left" Margin="56,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox" Text="{Binding Guid}"/>
        <TextBlock HorizontalAlignment="Left" Margin="196,40,0,0" Text="Čas vnosa" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="196,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding CasVnosa}"  />

    </Grid>
</UserControl>
